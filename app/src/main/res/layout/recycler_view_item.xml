<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_style"
    android:foregroundTint="#1D2349">
  <!--    android:background="#E53935"-->
  <!--    android:backgroundTint="#232323"-->
  <!--    android:foregroundTint="#FFFFFF"-->


  <TextView
      android:id="@+id/setTimeTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:text="@string/textView"
      android:textColor="#FFFFFF"
      android:textSize="24sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/alarmStyleTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="16dp"
      android:text="@string/alarmStyleText"
      android:textColor="#FFFFFF"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@+id/setTimeTextView"
      app:layout_constraintTop_toBottomOf="@+id/setTimeTextView" />

  <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/timerSetSwitch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="24dp"
      android:minWidth="48dp"
      android:minHeight="48dp"
      android:showText="true"
      android:textColorHint="#000000"
      android:thumb="@android:drawable/btn_star_big_on"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:thumbTint="#FDD835"
      app:track="@drawable/stroke_style"
      app:trackTint="#D81B60"
      app:trackTintMode="add" />

  <!--  app:trackTint="#FFFFFF"-->

  <!--      android:trackTint="@drawable/button_color"-->

</androidx.constraintlayout.widget.ConstraintLayout>